<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="createPane" alignment="CENTER" disable="false" fillWidth="true" prefHeight="200.0" prefWidth="300.0" visible="true" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="CreateController">
  <children>
    <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
        <Label prefWidth="-1.0" text="Name" HBox.hgrow="SOMETIMES">
          <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" fx:id="x1" />
          </HBox.margin>
        </Label>
        <TextField fx:id="nameField" prefWidth="-1.0" promptText="Character Name" HBox.hgrow="ALWAYS" HBox.margin="$x1" />
      </children>
    </HBox>
    <Separator prefWidth="200.0" />
    <Label text="Starting Attributes (Max: 60)" />
    <HBox prefHeight="200.0" prefWidth="200.0">
      <children>
        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS" HBox.margin="$x1">
          <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
              <children>
                <Label alignment="CENTER_LEFT" prefWidth="220.0" text="Strength" HBox.hgrow="ALWAYS" />
                <TextField fx:id="strengthField" prefWidth="-1.0" promptText="" text="10" />
              </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
              <children>
                <Label prefWidth="220.0" text="Reflex" HBox.hgrow="ALWAYS" />
                <TextField fx:id="reflexField" prefWidth="-1.0" promptText="" text="10" />
              </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
              <children>
                <Label prefWidth="220.0" text="Intelligence" HBox.hgrow="ALWAYS" />
                <TextField fx:id="intelligenceField" prefWidth="-1.0" promptText="" text="10" />
              </children>
            </HBox>
          </children>
        </VBox>
        <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS" HBox.margin="$x1">
          <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
              <children>
                <Label prefWidth="220.0" text="Perception" HBox.hgrow="ALWAYS" />
                <TextField fx:id="perceptionField" prefWidth="-1.0" promptText="" text="10" />
              </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
              <children>
                <Label prefWidth="220.0" text="Dexterity" HBox.hgrow="ALWAYS" />
                <TextField fx:id="dexterityField" prefWidth="-1.0" promptText="" text="10" />
              </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
              <children>
                <Label prefWidth="220.0" text="Luck" HBox.hgrow="ALWAYS" />
                <TextField fx:id="luckField" prefWidth="-1.0" promptText="" text="10" />
              </children>
            </HBox>
          </children>
        </VBox>
      </children>
    </HBox>
    <Button fx:id="createButton" mnemonicParsing="false" text="Create Character" VBox.margin="$x1" />
  </children>
</VBox>
